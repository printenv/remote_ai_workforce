{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/wp/authors",],
  "exclude": [
    "node_modules",
    "src/**/**.spec.ts",
    "src/**/**.test.ts"
  ]
}
